{{#foreach posts}}
    <article class="{{post_class}} post-stub">
        <div class="post-feature">
            <a href="{{url}}">
                {{#if image}}
                    <img class="post-featured-image" src="{{image}}">
                {{else}}
                    {{content words="0"}}
                {{/if}}

                <div class="post-feature-overlay"></div>
            </a>
        </div>

        <header class="post-header">
            <div class="post-stub-meta">
                <span class="post-date">{{date format="MMMM Do YYYY"}}</span>
            </div>

            <h1 class="post-stub-title"><a href="{{url}}">{{title}}</a></h1>
        </header>

        <div class="post-content">
            <p>{{excerpt characters=230}}...</p>
        </div>

        <footer class="post-stub-footer">
            {{#if tags}}
                <p class="post-tags">{{tags}}</p>
            {{/if}}

            <a class="post-link" href="{{url}}">&#xf14c;</a>
        </footer>
    </article>
{{/foreach}}