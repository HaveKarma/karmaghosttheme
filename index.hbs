{{!< default}}

<header class="site-header">
    <div class="stripes c100 sit-bottom">
        <div class="stripe bg-karma-blue"></div>
        <div class="stripe bg-karma-green"></div>
        <div class="stripe bg-karma-yellow"></div>
        <div class="stripe bg-karma-orange"></div>
    </div>
    <!-- End Stripes -->
    <div class="logo-holder">
        <a class="site-logo" title="{{@blog.title}}" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>
    </div>
    <!-- Logo -->
    <div class="container">
        {{navigation}}
        <h1 class="site-title"><a title="{{@blog.title}}" href="{{@blog.url}}">{{@blog.title}}</a></h1>
    </div>
</header>

<div class="content-primary">
    <div class="container clearfix">
        <div class="posts-container js-posts-container clearfix">
            {{> loop}}
        </div>

        {{pagination}}

        <a href="#" class="load-more-posts js-load-more-posts">Load More</a>
    </div>
</div>
